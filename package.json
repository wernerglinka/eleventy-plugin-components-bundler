{
  "name": "eleventy-plugin-bundled-components",
  "version": "1.0.0",
  "description": "Eleventy plugin for component-based architecture with tree-shaken CSS/JS bundling",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js"
  },
  "scripts": {
    "test": "c8 --include=lib/**/*.js --include=index.js mocha 'test/**/*.test.js' -t 15000",
    "test:unit": "mocha 'test/unit/**/*.test.js' -t 5000",
    "coverage": "c8 --include=lib/**/*.js --include=index.js --reporter=lcov --reporter=text mocha 'test/**/*.test.js' -t 15000",
    "format": "prettier --write \"**/*.{yml,md,js,json}\"",
    "format:check": "prettier --list-different \"**/*.{yml,md,js,json}\"",
    "lint": "eslint --fix .",
    "lint:check": "eslint --fix-dry-run .",
    "prerelease": "npm run lint && npm run format && npm test",
    "release": "./scripts/release.sh",
    "release:patch": "./scripts/release.sh patch --ci",
    "release:minor": "./scripts/release.sh minor --ci",
    "release:major": "./scripts/release.sh major --ci"
  },
  "keywords": [
    "eleventy",
    "eleventy-plugin",
    "11ty",
    "11ty-plugin",
    "components",
    "bundler",
    "esbuild"
  ],
  "author": "Werner Glinka",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wernerglinka/eleventy-plugin-bundled-components.git"
  },
  "peerDependencies": {
    "@11ty/eleventy": "^2.0.0 || ^3.0.0"
  },
  "dependencies": {
    "debug": "^4.4.0",
    "esbuild": "^0.27.2",
    "esbuild-plugin-postcss": "^0.3.0",
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "auto-changelog": "^2.5.0",
    "c8": "^10.1.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "mocha": "^11.7.5",
    "prettier": "^3.8.0",
    "release-it": "^19.2.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
